#!/bin/bash

set -x
set -e

ROOT=/opt/app
APP_ROOT=$ROOT/evry
VENV=$APP_ROOT/venv

vinit () {
    cd $ROOT
    rm -rf evry
    if [ ! -d evry ]; then
	git clone https://github.com/stevencox/evry.git
	cd evry
	virtualenv venv
	source venv/bin/activate
	deactivate
	cd static
	ln -s /projects/stars/var/tiles tiles
    fi
}

vinit
cd $APP_ROOT
source $VENV/bin/activate

pip install flask uwsgi psycopg2

if [[ ! -z "$(pgrep app.py)" ]]; then
    pkill -f app.py
fi
python ./app.py

exit 0
